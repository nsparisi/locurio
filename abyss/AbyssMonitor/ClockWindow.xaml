        <TextBlock Name="Time" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="01:44:55" VerticalAlignment="Top" Height="125" Width="472" Style="{DynamicResource ClockFontStyle}"/>
    </Grid>
</Window>
